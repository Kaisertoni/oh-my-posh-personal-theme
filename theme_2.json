{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"palette": {
    "blush": "#CB2A7A",
		"tan": "#FF4C4C",
		"plum": "#BE57B2",
		"salmon": "#FCA17D",
		"mint": "#00BF99",
		"sky_blue": "#149FDF",
		"pantone_green": "#66CC33",
		"pnpm_yellow": "#F9AD00",
		"python_yellow": "#FFD43B"
	},
	"blocks": [
		{
			"alignment": "left",
			"segments": [
				{
					"foreground": "p:mint",
					"style": "plain",
					"template": "{{ .Icon }}",
					"type": "os"
				},
				{
					"foreground": "p:mint",
					"properties": {
						"folder_separator_icon": "/",
						"style": "full"
					},
					"style": "plain",
					"template": " {{ .Path }} ",
					"type": "path"
				},
				{
					"foreground": "p:sky_blue",
					"properties": {
						"fetch_status": true,
						"fetch_upstream_icon": true,
						"branch_template": "{{ Branch }}"
					},
					"style": "plain",
					"template": "| {{ .UpstreamIcon }}  {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
					"type": "git"
				}
			],
			"type": "prompt"
		},
		{
			"type": "prompt",
			"alignment": "right",
			"segments": [
				{
					"type": "node",
					"style": "plain",
					"template": "{{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}\ue718 {{ .Full }} ",
					"foreground": "p:pantone_green",
					"properties": {
						"display_mode": "files",
						"fetch_package_manager": true,
						"fetch_version": true,
						"npm_icon": "<p:tan>\ue616 npm</> ",
						"pnpm_icon": "<p:pnpm_yellow>\udb80\udec1 pnpm</> ",
						"yarn_icon": "<p:sky_blue>\ue6a7 yarn</> "
					}
				},
				{
					"type": "python",
					"style": "plain",
					"template": "\ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }} (.venv) {{ end }}{{ .Full }}{{ end }} ",
					"foreground": "p:python_yellow",
					"properties": {
						"display_mode": "files"
					}
				}
			]
		},
		{
			"alignment": "left",
			"newline": true,
			"segments": [
				{
					"foreground": "p:blush",
					"style": "plain",
					"template": "\ue3bf ",
					"type": "root"
				},
				{
					"foreground": "p:blush",
					"style": "plain",
					"template": "# ",
					"type": "text"
				}
			],
			"type": "prompt"
		}
	],
	"version": 3
}
