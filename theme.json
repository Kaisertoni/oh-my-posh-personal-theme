{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"upgrade": {
		"source": "cdn",
		"interval": "168h",
		"auto": false,
		"notice": false
	},
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "path",
					"style": "diamond",
					"trailing_diamond": "",
					"template": " \ue5ff {{ .Path }} ",
					"foreground": "#000000",
					"background": "#00bf99",
					"properties": {
						"style": "folder",
						"folder_separator_icon": "/"
					}
				},
				{
					"type": "git",
					"style": "diamond",
					"trailing_diamond": "",
					"template": " {{ .UpstreamIcon }}  {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
					"foreground": "#000000",
					"background": "#149fdf",
					"properties": {
						"fetch_status": true,
						"fetch_upstream_icon": true,
						"branch_template": "{{ Branch }}"
					}
				},
				{
					"type": "sysinfo",
					"style": "diamond",
					"trailing_diamond": "",
					"template": " \ue266 {{ round .PhysicalPercentUsed .Precision }}% ",
					"foreground": "#000000",
					"background_templates": [
						"{{ if lt .PhysicalPercentUsed 70.0 }}#D4C735{{ end }}",
						"{{ if and (ge .PhysicalPercentUsed 70.0) (lt .PhysicalPercentUsed 90.0) }}#FFA500{{ end }}",
						"{{ if ge .PhysicalPercentUsed 90.0 }}#FF0000{{ end }}"
					]
				},
				{
					"type": "status",
					"style": "powerline",
					"powerline_symbol": "",
					"template": "{{ if eq .Code 0 }} ✔ {{ else }} ✘ {{ end }}",
					"foreground": "#000000",
					"background_templates": [
						"{{ if eq .Code 0 }}#3EC669{{ end }}",
						"{{ if ne .Code 0 }}#FF4C4C{{ end }}"
					],
					"properties": {
						"always_enabled": true
					}
				},
				{
					"type": "executiontime",
					"style": "diamond",
					"foreground": "#FFFFFF",
					"template": " {{ .FormattedMs }} ",
					"properties": {
						"always_enabled": true,
						"style": "austin"
					}
				}
			]
		},
		{
			"type": "prompt",
			"alignment": "right",
			"segments": [
				{
					"type": "node",
					"style": "plain",
					"template": "{{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}\ue718 {{ .Full }}",
					"foreground": "#88e570",
					"properties": {
						"display_mode": "files",
						"fetch_package_manager": true,
						"fetch_version": true,
						"npm_icon": "<#e5272d>\ue616 npm</> ",
						"pnpm_icon": "<#e5a100>\udb80\udec1 pnpm</> ",
						"yarn_icon": "<#37aee5>\ue6a7 yarn</> "
					}
				},
				{
					"type": "python",
					"style": "plain",
					"template": "\ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }} (.venv) {{ end }}{{ .Full }}{{ end }}",
					"foreground": "#FED142",
					"properties": {
						"display_mode": "files"
					}
				}
			]
		},
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "text",
					"style": "plain",
					"template": "➜ ",
					"foreground": "#63F08C"
				}
			],
			"newline": true
		}
	],
	"version": 3
}
