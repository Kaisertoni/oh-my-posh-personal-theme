{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"palette": {
		"black": "#000000",
		"white": "#FFFFFF",
		"tan": "#FF4C4C",
		"teal": "#047E84",
		"plum": "#be57b2",
		"blush": "#DA627D",
		"salmon": "#FCA17D",
		"sky": "#86BBD8",
		"teal_blue": "#33658A",
		"mint": "#00BF99",
		"sky_blue": "#149FDF",
		"pantone_green": "#66CC33",
		"pnpm_yellow": "#F9AD00",
		"python_yellow": "#FFD43B"
	},
	"upgrade": {
		"source": "cdn",
		"interval": "168h",
		"auto": false,
		"notice": false
	},
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "path",
					"style": "diamond",
					"leading_diamond": "\ue0b2",
					"trailing_diamond": "<transparent,p:plum>\ue0b2</>",
					"template": " \ue5ff {{ .Path }} ",
					"foreground": "p:black",
					"background": "p:plum",
					"properties": {
						"style": "folder",
						"folder_separator_icon": "/"
					}
				},
				{
					"type": "git",
					"style": "diamond",
					"leading_diamond": "\ue0b2",
					"trailing_diamond": "<transparent,p:blush>\ue0b2</>",
					"template": " {{ .UpstreamIcon }}  {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
					"foreground": "p:black",
					"background": "p:blush",
					"properties": {
						"fetch_status": true,
						"fetch_upstream_icon": true,
						"branch_template": "{{ Branch }}"
					}
				},
				{
					"type": "sysinfo",
					"style": "diamond",
					"leading_diamond": "\ue0b2",
					"trailing_diamond": "\ue0b0",
					"template": " \ue266 {{ round .PhysicalPercentUsed .Precision }}% ",
					"foreground": "p:black",
					"background": "p:salmon"
				},
				{
					"type": "status",
					"style": "powerline",
					"powerline_symbol": "\ue0b0",
					"template": "{{ if eq .Code 0 }} ✔ {{ else }} ✘ {{ end }}",
					"foreground": "p:black",
					"background_templates": ["{{ if eq .Code 0 }}p:mint{{ end }}", "{{ if ne .Code 0 }}p:tan{{ end }}"],
					"properties": {
						"always_enabled": true
					}
				},
				{
					"type": "executiontime",
					"style": "diamond",
					"foreground": "p:white",
					"template": " {{ .FormattedMs }} ",
					"properties": {
						"always_enabled": true,
						"style": "austin"
					}
				}
			]
		},
		{
			"type": "prompt",
			"alignment": "right",
			"segments": [
				{
					"type": "node",
					"style": "plain",
					"template": "{{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}\ue718 {{ .Full }}",
					"foreground": "p:pantone_green",
					"properties": {
						"display_mode": "files",
						"fetch_package_manager": true,
						"fetch_version": true,
						"npm_icon": "<p:tan>\ue616 npm</> ",
						"pnpm_icon": "<p:pnpm_yellow>\udb80\udec1 pnpm</> ",
						"yarn_icon": "<p:sky_blue>\ue6a7 yarn</> "
					}
				},
				{
					"type": "python",
					"style": "plain",
					"template": "\ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }} (.venv) {{ end }}{{ .Full }}{{ end }}",
					"foreground": "p:python_yellow",
					"properties": {
						"display_mode": "files"
					}
				}
			]
		},
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "text",
					"style": "plain",
					"template": "➜ "
				}
			],
			"newline": true
		}
	],
	"version": 3
}
